{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-calcom",
      "schedule": "0 1 * * *",
      "comment": "Daily at 9:00 AM Manila time (1:00 AM UTC)"
    },
    {
      "path": "/api/cron/sync-calcom",
      "schedule": "0 9 * * *",
      "comment": "Daily at 5:00 PM Manila time (9:00 AM UTC)"
    }
  ]
}